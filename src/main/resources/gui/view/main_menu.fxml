<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="gui.controller.MainMenuController">

    <Label fx:id="welcomeLabel" text="Willkommen" />

    <!-- 🔍 Suchleiste (zunächst unsichtbar) -->
    <HBox fx:id="searchBox" spacing="5" alignment="CENTER" visible="false" managed="false">
        <TextField fx:id="searchField" promptText="Suchbegriff..." />
        <Button text="Suchen" onAction="#onSearchVocabs" />
    </HBox>

    <!-- ➕ Vokabel hinzufügen (zunächst unsichtbar) -->
    <HBox fx:id="addBox" spacing="5" alignment="CENTER" visible="false" managed="false">
        <TextField fx:id="deutschField" promptText="Deutsch" />
        <TextField fx:id="albanischField" promptText="Albanisch" />
        <Button text="Speichern" onAction="#onSaveVocab" />
    </HBox>

    <!-- 📋 Hauptmenü -->
    <Button text="Vokabel hinzufügen" onAction="#onAddVocab" />
    <Button text="Vokabeln anzeigen" onAction="#onListVocabs" />
    <Button text="Vokabeln abfragen" onAction="#onStartQuiz" />
    <Button text="Fehler-Quiz starten" onAction="#onStartErrorQuiz" />
    <Button text="Vokabel suchen" onAction="#onShowSearchBox" />
    <Button text="Statistiken anzeigen" onAction="#onShowStats" />
    <Button text="Admin-Menü" onAction="#onAdminMenu" />
    <Button text="Beenden" onAction="#onExit" />
    <Button text="Logout" onAction="#onLogout" />

    <ListView fx:id="vocabListView" prefHeight="200" prefWidth="400" />

</VBox>